@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrovat se";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Vytvořit nový účet.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-light" asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger bg-dark"></span>
                </div>
                <div class="form-group">
                    <label class="text-light" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger bg-dark"></span>
                </div>
                <div class="form-group">
                    <label class="text-light" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger bg-dark"></span>
                </div>
                <div class="form-group">
                    <label class="text-light" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger bg-dark"></span>
                </div>
                <button type="submit" class="btn btn-default">Registrovat</button>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
